        <!--        android:layout_height="wrap_content"-->
        <!--        android:backgroundTint="@android:color/holo_blue_dark"-->
        <!--        android:gravity="center_horizontal"-->
        <!--        android:text="Scan BLE devices" -->
        <!--        android:visibility=""/>-->

    </LinearLayout>
</ScrollView>
